<br><div class = "content-body-admin">
<div class = "content-body1">
<br><div class ="admin-page"> <h1>New topic</div></h1></div>

<% form_for(@topic, :html => {:multipart => true}) do |f| %>

   <% if @topic.errors.any? %>
    <%= stylesheet_link_tag 'conditional' %>
   <% end %>
  <div class = "error-box">
    <% if @topic.errors.any? %>
      <h1 class = "error-heading"> <%=@topic.errors.count %>  <%=display_errors(@topic) %>  has been occured: </h1>
      <h2 class = "error-heading">Unable to add new topic.</h2>
      <% @topic.errors.full_messages.each do |message| %>
        <li class = "error"><%= message %> </li>
      <% end %>
    <% end %>
  </div>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :meaning %><br />
    <%= f.text_field :meaning %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :photo, "Photo" %>
    <%= f.file_field :photo %>
  <p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
</div><br>
<%= link_to 'Back', topics_path %>

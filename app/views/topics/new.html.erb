<% content_for :html_title, controller.action_name  %>
<% content_for :html_keywords, @words %>
<br><div class = "content-body-admin">
<%= javascript_include_tag 'main' %>
<div class = "content-body1">
<br><div class ="admin-page"> <h1>New topic</div></h1></div>

<% form_for(@topic, :html => {:multipart => true}) do |f| %>

   <% if @topic.errors.any? %>
    <%= stylesheet_link_tag 'conditional' %>
   <% end %>
  <% if @topic.errors.any? %>
    <div class = "error-box">
      <h1 class = "error-heading"> <%=@topic.errors.count %>  <%=display_errors(@topic) %>  has been occured: </h1>
      <h2 class = "error-heading">Unable to add new topic.</h2>
      <% @topic.errors.full_messages.each do |message| %>
        <li class = "error"><%= message %> </li>
      <% end %>
    </div>
  <% end %>

    <%= f.label :name %>
    <div class="clear"></div>
    <%= f.text_field :name %>
    <div class="clear"></div>
    <br>
    <%= f.label :meaning %>
    <div class="clear"></div>
    <%= f.text_field :meaning %>
    <div class="clear"></div>
    <br>
    <%= f.label :description %>
    <div class="clear"></div>
    <%= hidden_field_tag 'topci[id]', @topic.id %>
    <textarea id="editor" name="topic[description]"></textarea>
    <br>
    <div class="clear"></div>
    <%= f.label :photo, "Photo" %>
    <div class="clear"></div>
    <%= f.file_field :photo %>

     <br><br>
    <div class="dashboard action-button button rounded-borders">
       <%= f.submit 'Create' %>
    </div>
    <div class="clear"></div>
    <br>

<% end %>
</div><br>
<%= link_to 'Back', topics_path %>

<% content_for :head do %>
  <%= javascript_include_tag 'topics' %>
<% end %>
<h1>Editing <%= @topic.name unless @topic.blank? %> topic</h1>

<% form_for(@topic, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :meaning %><br />
    <%= f.text_field :meaning %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <%= image_tag @topic.photo.url(:normal) %>

  <p>
    <%= f.label :photo, "Photo" %>
    <%= f.file_field :photo %>
  <p>

  <p>
    <%= link_to 'Delete Image', "#", :id => "del_topic_image", :rel => @topic.id %>
  </p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @topic %> |
<%= link_to 'Back', topics_path %>

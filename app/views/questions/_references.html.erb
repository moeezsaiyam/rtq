<br>
<% unless @question.references.blank? %>
<div class = "content-body">
<h5>List of Related Verses</h5>
<ol>
  <% @question.references.each_with_index do|r,i| %>
 <br><h1> <%= r.issue %></h1>
   <h3><%=  parse_tags(r.from,r.to,r) %></h3>
   <%= puts "////////////"%>
   <%= puts @tags.inspect %>
      <p> <%= truncate(@verses[r.id.to_s].translate_to("eng")[0].text, :length => 300, :omission => '...') %></p>
      <div class = "separator-issue-width <%= verses_list_class(i+1,@question.references.count)%>"></div>
       <% end %>
</ol>
</div>
<% end %>

<% get_keywords(@question.answer) %>
<% content_for :html_title, @question.quest %>
<% content_for :html_keywords, @words %>
<% content_for :html_description, @question.answer[0..255] %>
<%= bread_crumb_context(@question) %>

<% content_for :head do %>
  <%= stylesheet_link_tag 'conditional' %>
<% end %>
   <div class="translations-box">
    <div class="clear"></div>
    <%= render :partial => "shared/translations" %>
    <%= previous_link("Verses") %>
  </div>
  <div class="clear translation-margin"></div>
  <div class = "verse-wrapper">

    <%= formatted_verses(@prev_verses, @trans_verses ) %>

    <div class="verse-background">
      <%= numbered_verse_content(@verse) %>
      <div class="clear"></div>
      <%= verse_text(@verse) %>
      <div class="verse-current-last">
        <%= translated_verse_name_author(@trans_verses[@verse.id][:name],@trans_verses[@verse.id][:author]) %>
        <%= translated_verse_translation(@trans_verses[@verse.id][:name], @trans_verses[@verse.id][:translation]) %>
      </div>
    </div>

    <%= formatted_verses(@next_verses, @trans_verses ) %>
    <%= previous_link("Verses") %>
  </div>




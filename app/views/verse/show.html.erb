<%= bread_crumb_verse() %>
<script>
  function get_context(){

    $.ajax({
              url: "/verse/get_context",
              data: {verse_id:<%= params[:id] %>} ,
              success: function( data ) {
                $('.list-points').html($(data).find('ol'));
                $('#arabic-verse').html("");
                }
            });
  }
</script>
 <br>
  <% @verses_range.each do|v| %>
   <div class="arabic" dir="rtl"><br>
       <%= v.text  %><br><br>
      </div>
       <%= link_to ("Show Context", {:controller => "verse", :action => "single_verse", :id => v.id, :prev => request.url} , { :class => 'show-more'}) %>
      <div class="verse-color">
      <%=(@trans_verses[v.id]) unless @trans_verses.blank? %><br>
      </div>
      <% end %><br>
  <%= addthis_button %><br>
    <% unless params[:prev].blank? %>
      <div class="list-points">
      <div id="prev-link">
      <a href="<%= params[:prev] %>"> <h3> << Back to Question </h3> </a>
      </div>
     </div>
   <% end %>

<!DOCTYPE HTML>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Refer to Quran</title>
    <link rel="shortcut icon" type="image/x-icon" href="/icon_Quran.ico">
     <%= stylesheet_link_tag 'coin-slider-styles' %>
    <%= stylesheet_link_tag 'style' %>
    <%= javascript_include_tag 'jquery' %>
    <%= javascript_include_tag 'jquery.watermarkinput' %>
    <%= javascript_include_tag 'jquery.autocomplete' %>
    <%= javascript_include_tag "coin-slider" %>
    <%= javascript_include_tag 'script' %>
    <%= yield :head %>
  </head>
<body>

<div id="wrapper">

  <!--header-->
  <div id="header">
    <%= render :partial => "shared/header" %>
  </div>
  <!--/header-->
  <div class="clear"></div>

  <!--content-->
  <div id="content">
  
    <!-- col-1-->
    <div id="col-1">

      <div class="side-nav">
        <%= render :partial => "shared/left_sidebar" %>
      </div>

      <div class="clear"></div>

      <a href="/main/duas" class="quranic-dua"></a>
      <% unless @verses_range.blank? %>
      <div class="trans-select">
   <form>  
  <%= check_box_tag 'trans[]', 'sahih', ( params[:trans].include?("sahih") if params[:trans]) %><%='sahih' %><br><br>
  <%= check_box_tag 'trans[]', 'maududi', ( params[:trans].include?("maududi") if params[:trans]) %><%='maududi' %><br><br>
  <%= check_box_tag 'trans[]', 'daryabadi', ( params[:trans].include?("daryabadi") if params[:trans]) %><%='daryabadi' %><br><br>
  <%= check_box_tag 'trans[]', 'asad', ( params[:trans].include?("asad") if params[:trans]) %><%='asad' %><br><br>
  <input type="submit" value="Submit"/>
  </div>
  </form>
  <%end%>
    </div>
    <!--/col-1-->
    
    <!--col-2 -->
    <div id="col-2">

      <% if !flash[:error].blank? %>
        <div class="error-box">
          <%= flash[:error] %>
        </div>
      <% end %>
      <% if !flash[:notice].blank? %>
        <div class="notice-box">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <div class="clear"></div>

      <%= yield %>
      </div>
    <!--/col-2 -->

    <div class="clear"></div>
  </div>
  <!--/content-->

</div>

  <!--footer-->
  <div id="footer">
    <%= render :partial => "shared/footer" %>
  </div>
  <!--/footer-->
  
</body>
</html>

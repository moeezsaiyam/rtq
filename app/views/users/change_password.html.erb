<h1>Change your password.</h1>
<% if logged_in? %>
  <%= label :email, 'Email' %>
  <div class="clear"></div>
  <%= current_user.email %>
  <div class = "error-box">
      <% if @user.errors.any? %>
         <%= stylesheet_link_tag 'conditional' %>
      <h1 class = "error-heading">  <%=@user.errors.count %>  <%=display_errors(@user) %>  has been occured: </h1>
      <h2 class = "error-heading">Unable to update sub topic.</h2>
      <% @user.errors.full_messages.each do |message| %>
        <li class = "error"><%= message %> </li>
      <% end %>
       <% end %>
    </div>
  <% form_for(@user)do |f| -%>
    <div class="change-password">   
      <%= hidden_field_tag 'action_page', "edit_password"%>
      <%= f.label :password ,'New Password'%>
      </br>  
      <%= f.password_field :password %>
      <div class="clear"></div>
      <%= f.label :password_confirmation, 'Confirm Password' %>
      <div class="clear"></div>
      <%= f.password_field :password_confirmation %>
      <div class="clear"></div>
    </div>  
    <%= submit_tag 'Change Psassword',:class => "action-button button rounded-borders"%>
   <% end -%>
<% end %>


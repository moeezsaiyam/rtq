  <%= f.error_messages %>
 
  <p>
    <%= f.label :name %>
    <%= f.text_field:name %>
  </p>
  <p>
    <%= f.label:table,'Table Name' %>
    <%= f.text_field:table_nam %>
  </p>
  <p>
  <%= f.check_box :default %>
  </p>
   <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>


<br><div class ="admin-page"> 
  <h1>Listing translations</div></h1>

<table class="admin-view">
  <tr>
  <th>Name</th>
  <th>Table Name</th>
  <th colspan="3">Actions</th>
  </tr>

<% @translations.each do |translation| %>
  <tr>
   <td><%=h translation.name %></td>
    <td><%=h translation.table_nam %></td>
    <td><%= link_to 'Show', translation %></td>
    <td><%= link_to 'Edit', edit_translation_path(translation) %></td>
    <td><%= link_to 'Destroy', translation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<div class="dashboard">
  <%= link_to 'Back', admin_dashboard_path %>
</div>

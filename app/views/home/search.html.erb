<br><div class="content-body">
  <ul>
    <% unless @topics_search.blank? %>
      <% @topics_search.each do |topic| %>
        <li>
          <a href="/<%= topic.name_slug %>"><h3><%= h topic.name %></h3></a><div class = "show-search"> Topic </div>
          <div>
            <p>
              <%=h topic.description[0..100] %><%= "..." if topic.description.chars.count > 100 %>
            </p>
          </div>
        </li>
      <% end %>
    <% end %>
    <% unless @sub_topics_search.blank? %>
      <% @sub_topics_search.each do |sub_topic| %>
        <li>
          <a href="/<%= sub_topic.topic.name_slug %>/<%= sub_topic.name_slug %>"><h3><%= h sub_topic.name %></h3></a><div class = "show-search"> SubTopic </div>
          <div>
            <p>
              <%=h sub_topic.description[0..100] %><%= "..." if sub_topic.description.chars.count > 100 %>
            </p>
          </div>
        </li>
      <% end %>
    <% end %>
    <% unless @questions_search.blank? %>
      <% @questions_search.each do |question| %>
        <li>
          <a href="/<%= question.sub_topic.topic.name_slug %>/<%= question.sub_topic.name_slug %>/<%= question.quest_slug %>"><h3><%= h question.quest %></h3></a><div class = "show-search"> Question </div>
          <div>
            <p>
              <%=h question.answer[0..100] %><%= "..." if question.answer.chars.count > 100 %>
            </p>
          </div>
        </li>
      <% end %>
    <% end %>
    <%= will_paginate @questions_search unless @questions_search.blank? %>
  </ul>
  <% if @topics_search.blank? && @sub_topics_search.blank? && @questions_search.blank? && @search.blank? %>
<h6>No search result found!</h6>
<% end %>
  <% unless @search.blank? %>
  <% @search.each do |s| %>
    <% if s.class == Topic %>
      <a href="/<%= s.name_slug %>"><h3><%= h s.name %></h3></a> <div class = "show-search"> Topic </div>
       <div>
            <p>
              <%=h s.description[0..100] %><%= "..." if s.description.chars.count > 100 %>
            </p>
          </div>
    <% elsif s.class == SubTopic %>
       <a href="/<%= s.topic.name_slug %>/<%= s.name_slug %>"><h3><%= h s.name %></h3></a><div class = "show-search"> SubTopic </div>
       <div>
            <p>
              <%=h s.description[0..100] %><%= "..." if s.description.chars.count > 100 %>
            </p>
          </div>
      <% elsif s.class == Question %>
    <a href="/<%= s.sub_topic.topic.name_slug %>/<%= s.sub_topic.name_slug %>/<%= s.quest_slug %>"><h3><%= h s.quest %></h3></a><div class = "show-search"> Question </div>
     <div>
            <p>
              <%=h s.answer[0..100] %><%= "..." if s.answer.chars.count > 100 %>
            </p>
          </div>
  <% end %>
  <% end %>
 <% end %>
</div>
<br><br>
<div class="list-points">
<div id="prev-link">
<a href="<%= '/' %>"> <h3> << Back  </h3> </a>
</div>
</div>

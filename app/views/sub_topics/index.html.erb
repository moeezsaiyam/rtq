<% if @topic.blank? %>
<div class = "content-body1">
<h6>Listing sub topics</h6></div>
<% else %>
  <h1>Listing <%= @topic.name %> sub topics</h1>
<% end %>
<table class="admin-view">
  <tr>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>

<% @sub_topics.each do |sub_topic| %>
  <tr>
    <td><%=h sub_topic.name %></td>
    <td><%= link_to 'Show', topic_sub_topic_path(@topic,sub_topic) %></td>
    <td><%= link_to 'Edit', edit_topic_sub_topic_path(@topic,sub_topic) %></td>
    <td><%= link_to 'Destroy', topic_sub_topic_path(@topic,sub_topic), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<div class="dashboard">
  <%= link_to 'Back', @topic %>
</div>
<div class="dashboard">
  <%= link_to 'Add new Sub topic', new_topic_sub_topic_path(@topic) %>
</div>

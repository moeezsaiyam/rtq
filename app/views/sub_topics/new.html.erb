<div class = "content-body1">
<br><div class ="admin-page"> <h1>New sub_topic</div></h6></div>

<% form_for @sub_topic, :url => topic_sub_topics_path(params[:topic_id]), :method => :post, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :topic_id %><br />
    <%= select("sub_topic", "topic_id", Topic.all.collect {|t| [ t.name, t.id ] }) %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :photo, "Photo" %>
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.check_box :featured %>Click here to feature this sub_topic on Main page.
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', topic_sub_topics_path(@sub_topic.topic) %>

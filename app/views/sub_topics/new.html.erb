<h1>New sub_topic</h1>

<% form_for @sub_topic, :url => topic_sub_topics_path(params[:topic_id]), :method => :post do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :topic_id %><br />
    <%= select("sub_topic", "topic_id", Topic.all.collect {|t| [ t.name, t.id ] }, { :include_blank => true }) %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', topic_sub_topics_path(@sub_topic.topic) %>

<%= bread_crumb_sub_topic(@sub_topic) %><br>
<%= render :partial => "main/truncation" %>
<%= javascript_include_tag 'main' %>
<div class="content-body">

  <h1><%=h @sub_topic.name %></h1>
    <% if !logged_in? %>
      <div class="jtruncate">
        <%= display_description(@sub_topic.description) %>
      </div>
    <% else %>
      <% form_for(@sub_topic, :url => topic_sub_topic_path(@sub_topic.topic,@sub_topic)) do |f| %>
        <%= hidden_field_tag 'sub_topic[id]', @sub_topic.id %>
        <textarea id="editor" name="sub_topic[description]"><%=simple_format(@sub_topic.description)%></textarea>
        <p>
          <%= f.submit 'Save', :class => "action-button button rounded-borders"%>
        </p>
      <% end %>
    <% end %>
  <% if logged_in? %>
    <div class = "actions">
      <%= link_to 'Edit', edit_topic_sub_topic_path(@sub_topic.topic,@sub_topic), :class => "action-button button rounded-borders" %>
      <%= link_to 'Add New Question', new_topic_sub_topic_question_path(@sub_topic.topic,@sub_topic), :class => "action-button button rounded-borders" %>
      <%= link_to 'Back', topic_sub_topics_path(@sub_topic.topic), :class => "action-button button rounded-borders" %>
    </div>
  <% end %>

  <div class="clear"></div><br>
  <% unless @sub_topic_questions.blank? %>
    <div class = "questions-pr">
      <%= render :partial => "questions" %>
    </div>
  <% end %>
  <div class = p-r-container>
    <% unless @popular_questions.blank? %>
      <%= render :partial => "shared/popular_ques" %>
    <% end %>
    <% unless @related_subject.blank? %>
      <%= render :partial => "related_subject" %>
    <%end%>

  </div>
</div>
